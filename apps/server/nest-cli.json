{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./modules/email/templates",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "./modules/email/images",
        "outDir": "dist"
      },
      {
        "include": "./modules/geoip/db/geo-lite2-city.mmdb",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}
