generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id(map: "pk_User") @db.Uuid
  email      String    @unique
  password   String
  isVerified Boolean   @default(false)
  role       RolesEnum @default(CUSTOMER)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())

  @@index([isVerified])
  @@map("users")
}

model Webhook {
  id                String                 @id(map: "pk_Webhook") @db.Uuid
  webhookId         String
  ecommercePlatform EcommercePlatformsEnum
  topic             String
  body              Json
  headers           Json
  expiredAt         DateTime
  createdAt         DateTime               @default(now())

  @@index([webhookId])
  @@index([expiredAt])
  @@map("webhooks")
}

enum RolesEnum {
  CUSTOMER
  SUPER_ADMIN
}

enum EcommercePlatformsEnum {
  SHOPIFY
  WOO_COMMERCE
}
